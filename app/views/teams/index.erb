<table>
  <th>Team Name</th>
  <th>Team Mascot</th>
  <th>Team Colors</th>
  <tr>
    <% @teams.each do |team| %>
      <td align="center"><a href="/teams/<%= team.id %>"><%= team.name %></a></td>

      <td align="center"><%= team.mascot %></td>
      <td align="center"><%= team.colors %></td>
  </tr>
  <% end %>
</table>
<br>
<a class="button" href="teams/new">Create New Team</a>
<a class="button" href="/leagues">View Leagues</a>
